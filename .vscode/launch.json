{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Node: debug test.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "program": "${workspaceFolder}/node/test.js"
        },
        {
            "name": "C#: debug Program",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/dotnet/openiap.csproj"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Rust: debug binary",
            "envFile": "${workspaceFolder}/.env",
            "cargo": {
                "args": [
                    "build",
                    "--bin=openiap",
                    "--package=openiap"
                ],
                "filter": {
                    "name": "openiap",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Rust: debug test",
            "envFile": "${workspaceFolder}/.env",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=openiap",
                    "--package=openiap"
                ],
                "filter": {
                    "name": "openiap",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
